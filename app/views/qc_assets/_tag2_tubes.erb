<div class="multiple-tag2-tube-interface">
  <div class="form-group">
    <label for="sibling" class="col-sm-5 control-label"><span class="sibling-purpose"></span> barcode</label>
    <div class="input-group col-sm-6">
      <%= input_glyph('barcode') %>
      <input type="text" class="form-control sibling-ean13 form-control-dis" placeholder="Scan plate barcode" required="required" name="sibling">
    </div>
  </div>

  <div class="form-group">
    <label for="sibling2" class="col-sm-5 control-label"><span class="sibling2-purpose"></span> barcode</label>
    <div class="input-group col-sm-6">
      <%= input_glyph('barcode') %>
      <input type="text" class="form-control sibling-ean13 form-control-dis" placeholder="Scan plate barcode" required="required" name="sibling2">
    </div>
  </div>

  <div class="form-group">
    <label for="asset_barcode" class="col-sm-5 control-label">Orientation</label>
    <div class="input-group col-sm-6">
      <%= input_glyph('refresh') %>
      <select class="form-control form-control-dis" required="required" name="template">
        <option value='<%= Settings.transfer_templates['Transfer columns 1-12'] %>'>Standard</option>
        <option value='<%= Settings.transfer_templates['Flip Plate'] %>'           >Rotated </option>
      </select>
    </div>
  </div>

  <h3>Tag 2 Tubes</h3>

  <% 16.times do |pos| %>
    <div class="form-group">
      <% location_1 = well_location_for(pos) %>
      <% location_2 = well_location_for(pos+16) %>
      <label for="sibling" class="col-sm-5 control-label"><span class="purpose">(<%= location_1 %>, <%= location_2 %>) Tag 2 Tube</span> barcode</label>
      <div class="input-group col-sm-6">
        <%= input_glyph('barcode') %>
        <input type="text" class="form-control sibling-ean13 form-control-dis" placeholder="Scan tube barcode" name="tag2_tube[<%= pos %>][barcode]">
        <input type="hidden" name="tag2_tube[<%= pos %>][target_well_locations][0]" value="<%= location_1 %>" />
        <input type="hidden" name="tag2_tube[<%= pos %>][target_well_locations][1]" value="<%= location_2 %>" />
      </div>
    </div>
  <% end %>
</div>
